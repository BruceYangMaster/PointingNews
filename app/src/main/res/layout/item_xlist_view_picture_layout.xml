<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_item_xlistview_picture_content_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_item_xlistview_picture_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_item_xlistview_picture_content_imageview"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/background_dark"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_item_xlistview_picture_title_textview"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/id_item_xlistview_picture_source_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/id_item_xlistview_picture_replay_textview"
            android:layout_toRightOf="@id/id_item_xlistview_picture_source_textview"
            android:layout_width="wrap_content"
           android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/comment_video_normal_night"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/id_item_xlistview_picture_praise_textview"
            android:layout_toRightOf="@id/id_item_xlistview_picture_replay_textview"
            android:layout_width="wrap_content"
           android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ss_comment_digg_normal_night"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/id_item_xlistview_picture_dispraise_textview"
            android:layout_toRightOf="@id/id_item_xlistview_picture_praise_textview"
            android:layout_width="wrap_content"
           android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/comment_dispriase"
            android:gravity="center_horizontal" />

    </RelativeLayout>

</RelativeLayout>